<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.SignUpFragment">

    <FrameLayout
        android:id="@+id/fr_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:orientation="vertical">
            <TextView
                android:background="@color/purple_200"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_Title"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:padding="20dp"
                android:text="Nghiên cứu Kĩ thuật nhận dạng người nói và xây dựng ứng dung"
                android:textAlignment="center"
                ></TextView>
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Chuyên ngành"
                        android:layout_margin="10dp">

                        <EditText
                            android:id="@+id/txt_chuyenganh"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:enabled="false"
                            android:text="Lăng Hữu Phước"
                            android:textColor="@color/colorText"
                            android:textSize="16sp"
                            android:textStyle="normal"></EditText>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Thông tin giảng viên hướng dẫn"
                        android:layout_margin="10dp">

                        <EditText

                            android:id="@+id/txt_gv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:enabled="false"
                            android:text="Lăng Hữu Phước"
                            android:textColor="@color/colorText"
                            android:textSize="16sp"
                            android:textStyle="normal"></EditText>
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Mục tiêu đề tài"
                        android:layout_margin="10dp">

                        <EditText
                            android:id="@+id/txt_Mota"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:enabled="false"
                            android:text="Lăng Hữu Phước"
                            android:textColor="@color/colorText"
                            android:textSize="16sp"
                            android:textStyle="normal"></EditText>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Môi trường thực hiện"
                        android:layout_margin="10dp">

                        <EditText
                            android:id="@+id/txt_moitruong"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:enabled="false"
                            android:text="Lăng Hữu Phước"
                            android:textColor="@color/colorText"
                            android:textSize="16sp"
                            android:textStyle="normal"></EditText>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Thời gian thực hiện đề tài"
                        android:layout_margin="10dp">

                        <EditText
                            android:id="@+id/txt_thoigian"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:enabled="false"
                            android:text="Lăng Hữu Phước"
                            android:textColor="@color/colorText"
                            android:textSize="16sp"
                            android:textStyle="normal"></EditText>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Trạng thái"
                        android:layout_margin="10dp">

                        <EditText
                            android:id="@+id/txt_trangthai"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:enabled="false"
                            android:text="Lăng Hữu Phước"
                            android:textColor="@color/colorText"
                            android:textSize="16sp"
                            android:textStyle="normal"></EditText>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Điểm số "
                        android:layout_margin="10dp">

                        <EditText
                            android:id="@+id/txt_diem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:enabled="false"
                            android:text="Lăng Hữu Phước"
                            android:textColor="@color/colorText"
                            android:textSize="16sp"
                            android:textStyle="normal"></EditText>
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:id="@+id/ln_sv"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTextSub"
                            android:textSize="15sp"
                            android:text="Nhóm Sinh viên thực hiện"
                            android:textStyle="bold"
                            ></TextView>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rcv_dsSV"
                            android:fillViewport="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </androidx.recyclerview.widget.RecyclerView>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_huy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Huỷ đăng kí đồ án này"
                        android:textColor="@color/colorRed"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_margin="23dp"></TextView>


                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>



    </FrameLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ln_dki"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chưa đăng kí đồ án nào !"
            android:textSize="18sp"
            android:textColor="@color/colorText"></TextView>
        <Button
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:id="@+id/btn_Dki"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:textColor="#ffffff"
            android:background="@drawable/button_signup"
            android:text="Đăng ký ngay "
            android:textAllCaps="false"/>
    </LinearLayout>


</FrameLayout>
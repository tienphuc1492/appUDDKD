<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SplashScreenActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="273dp"
    android:background="@drawable/blue_bg">
        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:src="@drawable/hutech"></ImageView>
        </FrameLayout>


        <TextView
            android:layout_width="370dp"
            android:layout_height="90dp"
            android:layout_marginTop="42dp"
            android:gravity="left"
            android:layout_gravity="center_horizontal"
            android:text="ỨNG DỤNG ĐĂNG KÝ ĐỒ ÁN CHUYÊN NGÀNH"
            android:textColor="#2E4391"
            android:textSize="34dp"
            android:textStyle="bold"></TextView>
        <TextView
            android:layout_width="370dp"
            android:layout_height="40dp"
            android:gravity="left"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="1dp"
            android:text="KHOA CNTT - HUTECH"
            android:textColor="#2E4391"
            android:textSize="27sp"
            android:textStyle="bold"></TextView>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="right"
            android:src="@drawable/half_circle"></ImageView>



    </LinearLayout>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="550dp"
        android:layout_marginLeft="-30dp"
        android:src="@drawable/hinhtron"></ImageView>
</FrameLayout>